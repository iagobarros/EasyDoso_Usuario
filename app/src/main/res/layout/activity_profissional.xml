<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profissional">

    <ImageView
        android:id="@+id/imageViewPerfil"
        android:layout_width="154dp"
        android:layout_height="210dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/servicoTitulo"
        app:srcCompat="@drawable/keanu" />

    <Button
        android:id="@+id/buttonProfissional"
        android:layout_width="399dp"
        android:layout_height="89dp"
        android:text="OUTRO PROFISSIONAL"
        android:textSize="30sp"
        app:backgroundTint="#DD9159"
        app:layout_constraintBottom_toTopOf="@+id/buttonServico"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonLigar"
        android:layout_width="399dp"
        android:layout_height="89dp"
        android:text="LIGAR"
        android:textSize="50sp"
        app:backgroundTint="#84CF69"
        app:layout_constraintBottom_toTopOf="@+id/buttonProfissional"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonServico"
        android:layout_width="399dp"
        android:layout_height="89dp"
        android:text="OUTRO SERVICO"
        android:textSize="40sp"
        app:backgroundTint="#E36B6B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewDescricao"
        android:layout_width="144dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Keanu Reeves, 50 anos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPerfil" />

    <TextView
        android:id="@+id/servicoTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="SERVICO"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>